.topics{
  height: 100%;
  overflow: hidden;
}
/*导航 nav*/
.top-bar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.top-bar-item {
  display: block;
    width: 30px;
    padding: 10px;
    margin: auto;
}
.top-bar-active{
 border-bottom: 2px solid #80bd01;
    color: #80bd01;
    font-weight: bold;
}

/*列表 list*/
.scroll-posts-list{
  overflow: hidden;
  margin-top: 0rpx;
}
.posts-list{
  position: relative;
  overflow: hidden;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #80bd01;
  
}
.posts-list-info{
  overflow: hidden;
  display: flex;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.posts-list-info .userimg{
  position: relative;
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 0rpx;
  vertical-align: middle;
}
.posts-list-info .item-box{
  flex: 1;
  margin-left: 30rpx;
}
.posts-list-info .item-box .userinfo{
  display: flex;
}
.posts-list-info .item-box .userinfo .username,
.posts-list-info .item-box .userinfo .time{
  flex: 1;
}
.posts-list-info .item-box .userinfo .time{
  text-align: right;
  color: #555;
}
.posts-list-info .item-box .posts-title{
  height: 80rpx;
  margin: 20rpx 0;
  font-size: 35rpx;
  font-weight: bold;
  color: #35495e;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.posts-list-info .item-box  .posts-tag{
  display: inline-block;
  width: 80rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #80bd01;
  border: 1rpx solid #80bd01;
}
.posts-list-info .item-box .hot{
  color: red;
  border: 1rpx solid red;
}
.posts-list-info image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.posts-list .bar-info .bar-info-item{
  display: inline-block;
  margin-right: 50rpx;
  line-height: 66rpx;
}
.posts-list .bar-info .bar-info-item-icon{
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.posts-list .bar-info .bar-info-item-number{
  display: inline-block;
  vertical-align: middle;
}

.posts-list .bar-info .bar-info-item2{
  display: inline-block;
  float: right;
  line-height: 66rpx;
}
.posts-list .bar-info .bar-info-item2 .bar-info-item-number{
  color: #80bd01;
}
/*loading*/
.loading-font{
  font-size: 30rpx;
}


